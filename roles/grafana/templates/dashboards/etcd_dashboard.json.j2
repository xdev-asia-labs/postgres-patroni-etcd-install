{
  "dashboard": {
    "title": "etcd Cluster",
    "uid": "etcd-cluster",
    "tags": ["etcd", "dcs"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "etcd Leader",
        "type": "stat",
        "targets": [{"expr": "etcd_server_has_leader", "legendFormat": "{{instance}}"}],
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 2,
        "title": "Leader Changes",
        "type": "graph",
        "targets": [{"expr": "rate(etcd_server_leader_changes_seen_total[5m])", "legendFormat": "{{instance}}"}],
        "gridPos": {"x": 6, "y": 0, "w": 18, "h": 8}
      },
      {
        "id": 3,
        "title": "RPC Rate",
        "type": "graph",
        "targets": [{"expr": "rate(etcd_network_client_grpc_received_bytes_total[5m])", "legendFormat": "{{instance}} - Received"}, {"expr": "rate(etcd_network_client_grpc_sent_bytes_total[5m])", "legendFormat": "{{instance}} - Sent"}],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 4,
        "title": "Disk Sync Duration",
        "type": "graph",
        "targets": [{"expr": "histogram_quantile(0.99, rate(etcd_disk_wal_fsync_duration_seconds_bucket[5m]))", "legendFormat": "{{instance}} - p99"}],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      }
    ]
  }
}
